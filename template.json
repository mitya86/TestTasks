{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "buildVersion": {
        "type": "string",
        "defaultValue": "",
        "metadata": {
            "description": "Build version for the site, needed for slot auto-swap."
        }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "spWebAppName": "salesproductivityserviceint",
    "servicePackageLink": "https://salesproductivitybuilds.blob.core.windows.net/artifacts/9.8.23263.31/VivaSalesBotService.zip?sv=2021-10-04&st=2023-09-21T00%3A01%3A11Z&se=2023-09-21T01%3A01%3A11Z&sr=c&sp=r&sig=6VnMt%2BMGijyvxloyZgGRmqFhdq0mcLuXnmiIhHkwo%2Bw%3D"
  },
  "resources": [
{
            "type": "Microsoft.Web/sites/slots",
            "apiVersion": "2018-02-01",
            "name": "[concat(variables('spWebAppName'), '/staging')]",
            "location": "[variables('location')]",
            "kind": "app",
            "properties": {
                "buildVersion": "[parameters('buildVersion')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "WEBSITE_SWAP_WARMUP_PING_PATH",
                            "value": "/health"
                        },
                        {
                            "name": "WEBSITE_SWAP_WARMUP_PING_STATUSES",
                            "value": "200,202"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "MSDeploy",
                    "type": "Extensions",
                    "apiVersion": "2018-02-01",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites', variables('spWebAppName'), '/slots/staging')]"
                    ],
                    "properties": {
                        "packageUri": "[variables('servicePackageLink')]"
                    }
                }
            ]
        }
  ]
}
