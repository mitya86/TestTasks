{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "scaleUnit": {
      "type": "string",
      "metadata": {
        "description": "Describes the scale unit that is to be used to uniquely identify each resource"
      }
    },
    "isBotCreationEnabled": {
      "type": "string"
    },
    "msAppId": {
      "type": "string"
    },
    "BotTrafficManager": {
      "type": "string"
    },
    "BotTrafficManagerDNS": {
      "type": "string"
    }
  },
  "variables": {
    "botPrefix": "VivaSalesBot",
    "botId": "[concat(variables('botPrefix'),parameters('scaleUnit'))]",
    "BotEndpoint":"[concat('https://', parameters('BotTrafficManagerDNS'), '/api/Bot/PostAsync' )]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/trafficmanagerprofiles",
      "apiVersion": "2018-04-01",
      "name": "[parameters('BotTrafficManager')]",
      "location": "global",
      "properties": {
        "profileStatus": "Enabled",
        "trafficRoutingMethod": "Geographic",
        "dnsConfig": {
          "relativeName": "[parameters('BotTrafficManager')]",
          "ttl": 30
        },
        "monitorConfig": {
          "profileMonitorStatus": "Online",
          "protocol": "HTTPS",
          "port": 443,
          "path": "/",
          "intervalInSeconds": 30,
          "toleratedNumberOfFailures": 3,
          "timeoutInSeconds": 10,
          "expectedStatusCodeRanges": [
            {
              "min": 400,
              "max": 404
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.BotService/botServices",
      "condition": "[equals(parameters('isBotCreationEnabled'), 'yes')]",
      "name": "[variables('botId')]",
      "kind": "azurebot",
      "apiVersion": "2021-03-01",
      "location": "global",
      "sku": {
          "name": "S1"
      },
      "properties": {
        "displayName": "[variables('botId')]",
        "msaAppType": "MultiTenant",
        "msaAppId": "[parameters('msAppId')]",
        "msaAppTenantId": "",
        "endpoint": "[variables('BotEndpoint')]"
      }
    },
    {
      "type": "Microsoft.BotService/botServices/channels",
      "apiVersion": "2021-03-01",
      "name": "[concat(variables('botId'), '/MsTeamsChannel')]",
      "condition": "[equals(parameters('isBotCreationEnabled'), 'yes')]",
      "location": "global",
      "dependsOn": [
          "[resourceId('Microsoft.BotService/botServices', variables('botId'))]"
      ],
      "properties": {
        "properties": {
          "enableCalling": false,
          "isEnabled": true
        },
        "channelName": "MsTeamsChannel"
      }
    }
  ]
}
